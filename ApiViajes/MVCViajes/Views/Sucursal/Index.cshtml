@model IEnumerable<ApiViajes.Models.Sucursal>
@{
    ViewBag.Title = "Sucursales";
}

<div class="container">

    <div class="col-sm-12 my-5 text-center">
        <h2 class="font-weight-bold">
            Sucursales
        </h2>
    </div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                id
            </th>
            <th>
                Mombre sucursal
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Sucursal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreSucursal)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_Sucursal }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_Sucursal }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_Sucursal })
                </td>

            </tr>
        }
        <tr>
            <td>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </td>
        </tr>

    </table>

</div>
